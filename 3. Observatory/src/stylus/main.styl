@font-face
    font-family: 'Geomanist'
    font-style: normal
    src url('../fonts/geomanist-regular-webfont.ttf')
@font-face
    font-family: 'Geomanist'
    font-style: normal
    font-weight: 500
    src url('../fonts/Geomanist-Medium.otf')
@font-face
    font-family: 'Geomanist'
    font-style: normal
    font-weight: bold
    src url('../fonts/Geomanist-Bold.otf')
@font-face
    font-family: 'Geomanist'
    font-style: normal
    font-weight: 900
    src url('../fonts/Geomanist-Black.otf')

@font-face
    font-family: 'Source Sans Pro'
    font-style: normal
    src url('../fonts/SourceSansPro-Regular.ttf')

@font-face
    font-family: 'Saira ExtraCondensed'
    font-style: normal
    font-weight: bold
    src url('../fonts/SairaExtraCondensed-Bold.ttf')

@font-face
    font-family: 'Actor'
    font-style: normal
    src url('../fonts/Actor-Regular.ttf')

@font-face
    font-family: 'DIN '
    font-style: normal
    src url('../fonts/DIN-Condensed.otf')

@import 'normalize-css.styl'

body 
    font-family: 'Source Sans Pro', sans-serif
    font-style: normal
    color: #000

.header
    display: flex
    background: #F2F2F2;
    border-bottom: 1px solid #E2E2E2
    padding: 0 15px

    &_right
    &_left
        width: 100%

    &_left__container
        display: flex
        flex-direction: column
        padding: 57px 122px 34px 0
        max-width: 457px
        margin-left: auto

    &__title
        font-family: 'Geomanist', sans-serif
        font-size: 44px
        line-height: 46px
        font-weight: 500
        color: #1C2E36
        padding-bottom: 11px

    &__article
        font-size: 17px
        line-height: 26px

    &_right
        background: no-repeat url('../images/header_background.svg')
        background-size: cover

.row
    display: flex
    flex-wrap: wrap
    flex-direction: row

.col
    display: flex
    flex-wrap: wrap


.col-6
    max-width: 50%
    flex-grow: 1

.col-3
    max-width: 25%
    flex-grow: 1

.bookmarks
    flex-grow: 1

    &-item
        display: flex
        justify-content: space-between
        background: #F5F5F5
        border: 1px solid #E2E2E2
        box-sizing: border-box
        flex-grow: 1

        &.active
            background-color: #ffffff
    
    &__title
        display: inline-flex
        max-width: 170px
        justify-content: center;
        font-family: 'Geomanist', sans-serif
        font-size: 20px
        line-height: 21px
        font-weight: 500
        color: #1C2E36
        padding: 28px 0 25px 15px
        
    
    &__info
        display: inline-flex
        flex-direction: column
        justify-content: center;
        padding-right: 25px
        font-family: 'Saira ExtraCondensed', sans-serif;
        font-style: normal
        font-weight: bold
        font-size: 16px
        line-height: 120%
        text-align: right
        color: #1C2E36
        white-space: nowrap // можно использовать?

        &__cost
            font-family: 'Geomanist', sans-serif
            font-size: 27px
            font-weight: 500
            text-align: right
            color: #1C2E36
    
.sticky 
    position: -webkit-sticky /* Safari */
    position: sticky
    top: 0
    z-index: 10

.wrapper
        max-width: 1160px
        margin: 0 auto
        padding: 0 15px

.main
    color: #000000     

    &__content
        padding: 26px 42px 0 36px
        position: relative

        &:before
            content: ''
            border-left: 1px solid #e2e2e2
            position: absolute
            left: 0
            height: 480px
            top: 0

    &__title
        font-family: 'Geomanist', sans-serif
        font-size: 40px
        line-height: 105%
        font-weight: 500
        font-weight: 500
        color: #1C2E36
        padding-bottom: 4px
    
    &__subtitle
        font-family: 'Source Sans Pro', sans-serif
        font-size: 22px
        line-height: 91%
        font-weight: 400
        color: #1C2E36
    
    &__text-item
        font-family: 'Source Sans Pro', sans-serif
        font-style: normal
        font-weight: normal
        font-size: 17px
        line-height: 153%
        color: #000000

    &__anchors
        padding: 25px 0 25px 0
        background: #ffffff
        overflow: hidden

        .anchors
            display: flex
            justify-content: space-between
            padding-bottom: 3px
            position: relative
            

            &-item
                float: left
                padding-bottom: 5px;

                a
                    font-size: 20px;
                    line-height: 30px;
                    color: #000000;
                    
        .anchors-border
            position: relative
            top: -5px
            z-index: -2
            border-bottom: 1px solid #C2C2C2

            &_item
                height: 4px
                background: #0098D7
                width: 0    // Или это в JS?
                position: absolute
                top: -2px
                transition: all 0.7s ease-out
                overflow: hidden

.form
    border-radius: 3px
    background: #F2F2F2
    border: none
    position: relative;     // норм?
    top: -90px;             //

    &__header
        width: 100%
        display: flex
        justify-content: flex-end
        background-color: #0084BA
        border-radius: 3px 3px 0 0

    &__title
        padding: 23px 21px 26px 0
        font-family: 'Geomanist', sans-serif
        font-size: 32px
        line-height: 125%
        font-weight: 500
        color: #FFFFFF

    &__main
        border: none
        padding: 0 8px      // ?
        padding-top: 23px   // Здесь?
    
    &__label
        margin-bottom: 22px;
        display: block;
        position: relative
        font-family: 'Source Sans Pro', sans-serif;

        .label 
            position: absolute
            left: 9px
            top: 5px
            
            font-weight: 600;
            font-size: 12px;
            line-height: 15px;
            text-transform: uppercase
            color: #666666;

        .date__icon
            position: absolute
            right: 16px
            top: 14px

        &__input
            display: inline-block
            // padding: 24px 142px 12px 8px
            width: 100%
            height: 55px
            box-sizing: border-box
            -moz-box-sizing: border-box
            -webkit-box-sizing: border-box
            -webkit-appearance: none
            appearance: none
            -moz-appearance: none
            background: #FFFFFF
            border: 1px solid #C2C2C2
            box-sizing: border-box
            border-radius: 3px
            padding: 20px 0 0 8px;
            pointer-events: none;
            
            &:disabled
                font-size: 15px;
                line-height: 19px;
                color: #C2C2C2;
                border: 1px solid #E2E2E2;
            
            &:focus
                background: #F2F2F2
                border: 1px solid #C2C2C2

            &.date
                padding-left:30px
            
            &.label
                position: absolute
                top: 16px
                left: 0
                font-size: 16px
                color: #9098A9
                font-weight: 500
                transform-origin: 0 0 

        .details
            display: none
        .details_block
            padding-top: 6px    // здесь?
            display: none

            &__content
                font-weight: 600;   // не подходит
                font-size: 10px;
                line-height: 13px;
                color: #666666;

        .dropdown
            display: none  //!!!!!!!!!!!!!
            position: absolute
            z-index: 1
            overflow-y: auto
            background: #fff
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.265087);
            
            box-sizing: border-box;
            border-radius: 3px;

            &.selector
                display: none   //!!!!!!!!!!!!!
                max-height: 222px
                padding: 12px 27px 0 10px
                

            .selector
                display: none   //!!!!!!!!!!!!!
                max-height: 222px
                padding: 12px 27px 0 10px
                

                &-item
                    display: inline-flex
                    padding: 4px 0 4px 13px
                    margin-bottom: 9px
                    font-family: 'Source Sans Pro', sans-serif
                    font-size: 15px
                    line-height: 19px
                    color: #000000
                    cursor: pointer
                    width: 90%;     /* WARNING */

                    &:hover
                    &:active
                        background: #ECECEC

            &.counter
                display: none
                padding: 0 28px 0 24px
                max-height: 257px
                width: 100%;
                z-index: 1

                &::before
                    content: '▲';
                    transform: scale(1.6, 0.7);
                    color: #000;
                    position: absolute;
                    top: -12px;
                    left: 13px;
            
            .counter
                display: none
                padding: 0 28px 0 24px
                max-height: 257px

                &::after
                    content: '▲';
                    transform: scale(1.6, 0.7);
                    color: #fff;
                    position: absolute;
                    top: -12px;
                    left: 13px;

                &-item 
                    font-size: 15px;
                    line-height: 19px;
                    display: flex
                    justify-content: space-between

                    &_left
                    &_right
                        display: inline-flex
                        justify-content: center
                        align-items: center

                        .minus
                        .plus
                            width: 16px
                            height 23px
                            border: none
                            cursor: pointer
                            -webkit-transition: all 0.3s ease;
                            -moz-transition: all 0.3s ease;
                            -o-transition: all 0.3s ease;
                            -ms-transition: all 0.3s ease;
                            transition: all 0.3s ease;


                            &:hover
                                transform: scale(1.3)
                            &:active
                                transform: scale(0.9)


                        .minus
                            background: url("../images/minus_icon.svg") no-repeat center
                        
                        .plus
                            background: url("../images/plus_icon.svg") no-repeat center
                            //padding(margin) задал у field

                    .field
                        padding: 0
                        margin: 12px 11px 12px 11px
                        width: 38px;
                        height: 38px;
                        background: #FFFFFF;
                        border: 2px solid #E2E2E2;
                        box-sizing: border-box;
                        border-radius: 3px;
                        font-weight: 600
                        font-family: 'Source Sans Pro', sans-serif;
                        font-size: 16px;
                        line-height: 20px;
                        text-align: center;


    transition: all .2s ease

    &__subtotal
        display: none
        font-weight: bold;
        font-size: 16px;
        line-height: 20px;
        color: #000000;
        padding-bottom: 30px
            
    &__button
        margin-bottom: 19px
        font-family: 'Geomanist', sans-serif
        font-size: 33px
        line-height: 94%
        font-weight: 500
        color: #FFFFFF
        background: #0084BA
        border: none
        display: flex
        justify-content: center
        align-items: center
        border-radius: 3px  
        min-width: 100%
        min-height: 68px    // как правильно?

        &:hover
            transform: scale(1.005)
            background: #007DBA
        &:active
            background: #007DBA
            transform: scale(0.9)
        

.anchor_footer
    background: #0084BA
    position: fixed
    bottom: 0
    z-index: 1
    transition: all 1s
    opacity: 0
    left: -100%
    width: 100%

    &__content
        display: flex
        justify-content: space-between
        max-width: 1160px
        margin: 0 auto
        padding: 0 15px

        &_right
        &_left
            display: flex
            justify-content: center
            align-items: center

        &_right
            display: flex
            flex-direction: column
            align-items: flex-end;
            color: #FFFFFF

            h3 
                font-family: 'Geomanist', sans-serif
                font-size: 32px
                line-height: 125%
                font-weight: 500
            h4 
                font-family: 'DIN Condensed', sans-serif
                font-size: 16px
                // line-height: 150%
                font-stretch: condensed

    &__image
        padding-right: 28px
        max-width: 109px
        height 80px
        object-fit: cover
    
    &__title
        font-family: 'Geomanist', sans-serif
        font-size: 40px
        line-height: 60%
        font-weight: 500
        color: #FFFFFF

.warning
    display: none
    position: absolute
    top: 0
    color: #ffffff
    text-align: center
    width: 100%
    padding: 14px 0 12px 0
    font-family: 'Geomanist', sans-serif;
    font-size: 23px;
    line-height: 24px;
    font-weight: 500;
    background: #E26D5A;

.show
    opacity: 1
    left: 0
    
.hidden
    display: none
    // transition: visibility 0s linear 0.33s, opacity 0.33s linear;